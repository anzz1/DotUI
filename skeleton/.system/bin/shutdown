#!/bin/sh

flawless_victory() {
	for p in $1; do
		if [ -d "/proc/$p" ]; then
			return 1
		fi
	done
	return 0
}

fatality() {
	c=0
	while [ $c -lt 5 ]; do
		pids=$(fuser -m /mnt/SDCARD | sed -r "s/\b$$\b//g")
		if flawless_victory "$pids"; then
			return
		fi
		kill $1 $pids
		sleep 0.1
		c=$((c+1))
	done
}

if [ "$0" = "/tmp/_shutdown" ]; then
	killall telnetd ftpd tcpsvd main updater runtime.sh launch.sh
	fatality
	sync
	umount -r /mnt/SDCARD
	killall -9 telnetd ftpd tcpsvd main updater runtime.sh launch.sh
	fatality -9
	sync
	umount /mnt/SDCARD
	while true; do
		sync
		poweroff
		sleep 10
	done
fi
export LD_PRELOAD=
export LD_LIBRARY_PATH=/lib
export PATH=/bin:/sbin:/usr/bin:/usr/sbin
if [ ! -z "$DATETIME_PATH" ]; then
	date -u +%s > "$DATETIME_PATH"
fi
rm -f /tmp/miniui_exec
sync
if [ ! -f /tmp/_shutdown ]; then
	cp -f /mnt/SDCARD/.system/bin/shutdown /tmp/_shutdown
fi
pgrep -f /tmp/_shutdown || (set -m; /tmp/_shutdown </dev/null >/dev/null 2>&1 &) 
while true; do
	sleep 10
done
